	"SQL Prepare Statement": {
		"prefix": "rrr-prepare-sql",
		"body": [
			"$$con = $$this->con();\n",
            
            "$$sql = \"$1\";",

            "$$stmt = $$con->stmt_init();",
            "if (!$stmt->prepare($$sql)) {",
                "\techo json_encode([\"status\" => 1, \"data\" => $$stmt->error]);",
                "\treturn;",
            "} else {",
                "\t$$stmt->bind_param(\"$2\", $3);",
            "}",
            "$$stmt->execute();",
            "$$stmt->close();"
		],
		"description": "For creating sql prepared statement"
		
	},
